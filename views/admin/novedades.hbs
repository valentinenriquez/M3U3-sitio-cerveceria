<div class="container" style="margin-top: 150px;">
    {{!-- {{fila 1}} --}}
    <div class="row">
        <div class="col">
            <p class="text-right">
                <span>Hola {{usuario}} </span>
                <a href="/admin/login/logout" class="btn btn-dangerous">cerrar session <i
                        class="fas fa-sing-out-alt"></i></a>

            </p>

        </div>
    </div>
    {{!-- fin fila 1 --}}
    {{!-- fila 2 --}}
    <div class="row">
        <div class="col-7" style="margin-top:9px ;">
            <h2>Listado de Novedades</h2>
        </div>
        <div class="col-2 text right">
            <a href="/admin/novedades/agregar" class="btn btn-success"><i class="fas fa-plus"></i>Nuevo</a>
        </div>
        <div class="col-3 text-right">
            <form class="form-inline" action="/admin/novedades" method="get">
                <input class="form-control" type="serch" aria-label="Search" placeholder="Buscar" name="q" {{#if q}} value="{{q}}" {{/if}} >
                <button class="btn btn-secondary my-2 my-sm-0" type="submit">
                    <i class="fa fa-search" aria-hidden="true"></i>
                </button>
            </form>
        </div>
    </div>
    {{!-- fin fila 2 --}}
    {{!-- inicio fila 3 --}}
    <div class="row">
        <div class="col">
            <table class="table">
                <thead>
                    <tr class="table-dark">
                        <th scope="col">#</th>
                        <th scope="col">Titulo</th>
                        <th scope="col">Imagen</th>
                        <th scope="col" class=" text-rigth">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each novedades}}
                    <tr>
                        <th scope="row">{{id}}</th>
                        <td>{{titulo}}</td>
                        <td>{{{imagen}}}</td>
                        <td class="text-right">
                            <a href="/admin/novedades/modificar/{{id}}" class="btn btn-secondary"><i class="fas fa-pencil-alt"></i> </a>
                            <a href="/admin/novedades/eliminar/{{id}}" class="btn btn-secondary"><i class="fas fa-trash"></i></a>
                        </td>
                        {{/each}}
                    </tr>
                </tbody>
            </table>
            {{#if is_search}}
            {{#unless novedades.length}}
            No se encontraton resultados para "<b>{{q}}</b>"
            {{/unless}}
            {{/if}}
        </div>
    </div>
</div>